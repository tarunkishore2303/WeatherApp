<%- include ("./partials/header") %>
    <div class="ui centered card">
        <div class="image ">
            <img src="<%=data.current.condition.icon%>" alt="">
        </div>
        <div class="content">
          <!-- Current city -->
            <p class="center aligned header"><strong><%= data.location.name %></strong></p>
        </div>
        <!-- City's temperature -->
        <div class="description">
            <h1 class= "center aligned"><%=data.current.temp_f %>째F</h1>
        </div>
        <!-- Upcoming day's forecast -->
        <div class="ui big horizontal divided list">
            <div class="item">
              <img class="ui avatar image" src="<%=data.forecast.forecastday[0].day.condition.icon %>">
              <div class="content">
                <div class="text"><%=data.forecast.forecastday[0].day.maxtemp_f %>째C</div>
              </div>
            </div>
            <div class="item">
              <img class="ui avatar image" src="<%=data.forecast.forecastday[1].day.condition.icon %>">
              <div class="content">
                <div class="text"><%=data.forecast.forecastday[1].day.maxtemp_f %>째F</div>
              </div>
            </div>
            <div class="item">
              <img class="ui avatar image" src="<%=data.forecast.forecastday[2].day.condition.icon %>">
              <div class="content">
                <div class="text"><%=data.forecast.forecastday[2].day.maxtemp_f %>째F</div>
              </div>
            </div>
          </div>
        
        
       
        
    </div>

    
   

<%- include ("./partials/footer") %>
